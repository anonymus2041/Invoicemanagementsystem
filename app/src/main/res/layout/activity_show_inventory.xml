<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show_inventory"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/itemname_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="hello"
        android:padding="5dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textColor="#06b823"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/qty_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity in stock: "
            android:textStyle="italic|bold"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/qty_value_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textSize="15dp"
            android:background="@android:color/holo_blue_light"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate: "
        android:textStyle="italic|bold"
        android:textSize="15dp"
         />

    <TextView
        android:id="@+id/unitprice_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic|bold"
        android:textSize="15dp"
        android:padding="3dp"
        android:textColor="#ed2607"

        />
</LinearLayout>


</LinearLayout>