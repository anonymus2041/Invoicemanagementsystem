<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show_inventory"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/itemname_listView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_weight="1"
        android:text="hello"
        android:padding="5dp"
        android:textAllCaps="true"
        android:textSize="23dp"
        android:textColor="#12a35d"
         />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:id="@+id/asOfdATEdisplay"
            android:textStyle="bold|italic"
            android:textColor="#e09f12"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/qty_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Qty"
            android:textStyle="italic|bold"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/qty_value_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape"
            android:backgroundTint="@android:color/holo_blue_light"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Value: "
        android:textStyle="italic|bold"
        android:textSize="15dp"
         />

    <TextView
        android:id="@+id/stockValue_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic|bold"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:textColor="#ed2607"


        />
</LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/salePrice_listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sale price"
                    android:textStyle="italic|bold"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/salePrice_value_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textSize="15dp"
                    android:textColor="@android:color/holo_blue_light"
                    android:padding="8dp"


                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchase Price: "
                    android:textStyle="italic|bold"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/Purchaseprice_listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:textColor="@android:color/holo_blue_light"


                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>